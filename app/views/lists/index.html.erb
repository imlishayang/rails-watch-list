
<div class="new-section-list"> Your movie lists </div>

<div class="container">
  <div class="cards">
    <% @lists.each do |list| %>

        <div class="list-card-category">
          <%= link_to list_path(list) do %>
            <%= list.name %></h1> <%= link_to "(X)", list_path(list), method: :delete, data: { confirm: "Are you sure you want to delete this list?"} %>
            <div>
            </div>

          <% end %>

        </div>
    <% end %>
  </div>
</div>
