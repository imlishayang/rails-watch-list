
<div class="container">
  <h1><%= @list.name.upcase %></h1>
    <% @list.bookmarks.each do |bookmark| %>
      <h2><%= bookmark.movie.title %></h2>
      <%= bookmark.movie.poster_url %>
      <p><%= bookmark.movie.overview %></p>
      <p>Comments:</p>
      <%= bookmark.comment %>
      <p> <%= link_to "Delete", bookmark_path(bookmark), method: :delete%> </p>
    <hr>
<% end %>

<p><%= link_to "Add bookmark", new_list_bookmark_path(@list)  %></p>



</div>
