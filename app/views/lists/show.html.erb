
<h1 class="show-page-title"><%= @list.name.capitalize %></h1>
<div class="container">
  <div class="container">
    <div class="cards">
     <% @list.bookmarks.each do |bookmark| %>
      <div class="flip-card">
        <div class="flip-card-inner">

          <div class="flip-card-front">
            <%= image_tag "https://image.tmdb.org/t/p/w200/#{bookmark.movie.poster_url}", class: "img-show" %>
          </div>

          <div class="flip-card-back">
            <h2 class="show-card-title"><%= bookmark.movie.title %> <%= link_to "X", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to delete this movie?"}, class:"show-delete-button" %></h2>

            <p>Rating:<%= bookmark.movie.rating %>/10</p>
            <p class="movie-overview"><%= bookmark.movie.overview %></p>
            <p class="show-comment">Comment:</p>
            <p class="user-show-comment"><%= bookmark.comment %></p>
          </div>

        </div>
      </div>
      <% end %>
    </div>
  </div>



  <h3 class="new-section" >Add new movie to your list</h3>
  <%= simple_form_for [ @list, @bookmark ] do |f| %>
  <%= f.association :movie, prompt: "Please Select",  label: false %>
  <%= f.input :comment, placeholder:"Comment ",  label: false %>
  <%# <%= f.input :photo, as: :file %>
  <%= f.button :submit, class: "home-button" %>
  <p><%= link_to "Cancel", lists_path, class:"cancel-button" %></p>
<% end %>

</div>
</div>
